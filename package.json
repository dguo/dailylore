{
    "name": "dailylore",
    "version": "0.1.0",
    "description": "Lightweight news headlines aggregator",
    "private": true,
    "scripts": {
        "build": "yarn run get-headlines && webpack --mode=development",
        "build:prod": "yarn run get-headlines && NODE_ENV=production webpack --mode=production",
        "format": "prettier --write \"./**/*.{json,js}\"",
        "format:check": "prettier --list-different \"./**/*.{json,js}\"",
        "get-headlines": "babel-node ./src/get-headlines",
        "lint": "eslint . && sass-lint -v -q",
        "start": "yarn install && yarn run get-headlines && webpack-dev-server --mode=development",
        "start:prod": "yarn install && yarn run build:prod && static site -a 0.0.0.0",
        "test": "jest",
        "test:ci": "wait-for-localhost 8080 && yarn run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dguo/dailylore.git"
    },
    "keywords": [
        "news",
        "headlines",
        "aggregator"
    ],
    "author": "Danny Guo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dguo/dailylore/issues"
    },
    "homepage": "https://dailylore.com",
    "dependencies": {
        "@babel/core": "7.5.5",
        "@babel/preset-env": "7.5.5",
        "autotrack": "1.1.0",
        "axios": "0.21.1",
        "babel-loader": "8.0.6",
        "css-loader": "3.2.0",
        "debug": "4.1.1",
        "lodash.shuffle": "4.2.0",
        "materialize-css": "0.100.1",
        "node-sass": "4.12.0",
        "p-retry": "4.1.0",
        "sass-loader": "7.3.1",
        "storage-available": "1.1.0",
        "style-loader": "1.0.0",
        "webpack": "4.39.2"
    },
    "devDependencies": {
        "@babel/node": "7.5.5",
        "clean-webpack-plugin": "0.1.19",
        "dotenv": "8.1.0",
        "eslint": "6.2.2",
        "eslint-config-prettier": "6.1.0",
        "jest": "24.9.0",
        "jest-puppeteer": "4.3.0",
        "mini-css-extract-plugin": "0.8.0",
        "node-static": "0.7.11",
        "prettier": "1.18.2",
        "puppeteer": "1.19.0",
        "sass-lint": "1.13.1",
        "wait-for-localhost-cli": "1.1.0",
        "webpack-cli": "3.3.7",
        "webpack-dev-server": "3.8.0"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ]
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 8,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "no-unused-vars": [
                "error",
                {
                    "args": "none"
                }
            ]
        }
    },
    "jest": {
        "preset": "jest-puppeteer",
        "testRegex": "./test/.*.js$"
    },
    "prettier": {
        "bracketSpacing": false,
        "singleQuote": true,
        "tabWidth": 4
    }
}
