{
  "name": "dailylore",
  "version": "0.1.0",
  "description": "Lightweight news headlines aggregator",
  "main": "entry.js",
  "private": true,
  "scripts": {
    "dev": "npm prune && npm install && webpack-dev-server -d",
    "build": "webpack --progress --colors --optimize-minimize",
    "prod": "npm prune && npm install && npm run build && static -a 0.0.0.0",
    "lint": "eslint .; sass-lint -v -q; ./scripts/verify-minification.sh; exit 0",
    "serve": "npm prune && npm install && static -a 0.0.0.0",
    "wait:web": "while ! curl -m 2 -s -o /dev/null web:8080; do sleep 2; done;",
    "wait:selenium": "while ! curl -m 2 -s -o /dev/null selenium:4444/wd/hub; do sleep 2; done;",
    "lint:ci": "npm run wait:web && eslint . && sass-lint -v -q",
    "test": "npm run wait:web && npm run wait:selenium && wdio ./test/wdio.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dguo/dailylore.git"
  },
  "keywords": [
    "news",
    "headlines",
    "aggregator"
  ],
  "author": "Danny Guo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dguo/dailylore/issues"
  },
  "homepage": "https://dailylore.com",
  "dependencies": {
    "autotrack": "1.0.1",
    "babel-core": "6.14.0",
    "babel-loader": "6.2.5",
    "babel-preset-es2015": "6.14.0",
    "css-loader": "0.25.0",
    "debug": "2.2.0",
    "materialize-css": "0.97.7",
    "node-sass": "3.9.3",
    "sass-lint": "1.9.1",
    "sass-loader": "4.0.2",
    "style-loader": "0.13.1",
    "webpack": "1.13.2",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "eslint": "3.5.0",
    "node-static": "0.7.8",
    "wdio-mocha-framework": "0.4.3",
    "webdriverio": "4.2.16",
    "webpack-dev-server": "1.16.1"
  }
}
