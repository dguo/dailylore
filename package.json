{
    "name": "dailylore",
    "version": "0.1.0",
    "description": "Lightweight news headlines aggregator",
    "private": true,
    "scripts": {
        "build:prod": "yarn run get-headlines && parcel build site/index.html",
        "format": "prettier --write \"./**/*.{json,js}\"",
        "format:check": "prettier --list-different \"./**/*.{json,js}\"",
        "get-headlines": "node ./src/get-headlines",
        "lint": "eslint . && sass-lint -v -q",
        "start": "yarn install && yarn run get-headlines && parcel site/index.html",
        "start:prod": "yarn install && yarn run build:prod && static site -a 0.0.0.0",
        "test": "jest",
        "test:ci": "wait-for-localhost 8080 && yarn run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dguo/dailylore.git"
    },
    "type": "module",
    "keywords": [
        "news",
        "headlines",
        "aggregator"
    ],
    "author": "Danny Guo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dguo/dailylore/issues"
    },
    "homepage": "https://dailylore.com",
    "dependencies": {
        "autotrack": "2.4.1",
        "debug": "4.3.4",
        "lodash.shuffle": "4.2.0",
        "materialize-css": "0.100.1",
        "p-retry": "5.1.1",
        "storage-available": "1.1.0"
    },
    "devDependencies": {
        "@parcel/packager-raw-url": "2.6.2",
        "@parcel/transformer-sass": "2.6.2",
        "@parcel/transformer-webmanifest": "2.6.2",
        "axios": "0.27.2",
        "dotenv": "16.0.1",
        "eslint": "8.19.0",
        "eslint-config-prettier": "8.5.0",
        "jest": "24.9.0",
        "jest-puppeteer": "4.3.0",
        "node-static": "0.7.11",
        "parcel": "2.6.2",
        "prettier": "2.7.1",
        "process": "0.11.10",
        "puppeteer": "1.19.0",
        "sass-lint": "1.13.1",
        "wait-for-localhost-cli": "3.0.0"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "no-unused-vars": [
                "error",
                {
                    "args": "none"
                }
            ]
        }
    },
    "jest": {
        "preset": "jest-puppeteer",
        "testRegex": "./test/.*.js$"
    },
    "prettier": {
        "bracketSpacing": false,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    }
}
