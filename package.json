{
    "name": "dailylore",
    "version": "0.1.0",
    "description": "Lightweight news headlines aggregator",
    "private": true,
    "scripts": {
        "build": "webpack --mode=development",
        "build:prod": "webpack --mode=production",
        "format": "prettier --write \"./**/*.{json,js}\"",
        "format:check": "prettier --list-different \"./**/*.{json,js}\"",
        "lint": "eslint . && sass-lint -v -q",
        "start": "yarn install && webpack-dev-server -d",
        "start:prod": "yarn install && yarn run build:prod && static -a 0.0.0.0",
        "test": "jest",
        "test:ci": "wait-for-localhost 8080 && yarn run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dguo/dailylore.git"
    },
    "keywords": [
        "news",
        "headlines",
        "aggregator"
    ],
    "author": "Danny Guo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dguo/dailylore/issues"
    },
    "homepage": "https://dailylore.com",
    "dependencies": {
        "autotrack": "1.1.0",
        "axios": "0.18.0",
        "babel-core": "6.26.3",
        "babel-loader": "7.1.5",
        "babel-preset-env": "1.7.0",
        "css-loader": "1.0.0",
        "debug": "3.1.0",
        "lodash.shuffle": "4.2.0",
        "materialize-css": "0.100.1",
        "node-sass": "4.9.2",
        "sass-loader": "7.1.0",
        "storage-available": "1.1.0",
        "style-loader": "0.22.1",
        "webpack": "4.16.5"
    },
    "devDependencies": {
        "eslint": "4.5.0",
        "eslint-config-prettier": "2.9.0",
        "jest": "23.4.2",
        "jest-puppeteer": "3.2.1",
        "node-static": "0.7.10",
        "prettier": "1.14.1",
        "puppeteer": "1.6.2",
        "sass-lint": "1.10.2",
        "wait-for-localhost-cli": "1.0.0",
        "webpack-cli": "3.1.0",
        "webpack-dev-server": "3.1.5"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 8,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "no-unused-vars": [
                "error",
                {
                    "args": "none"
                }
            ]
        }
    },
    "jest": {
        "preset": "jest-puppeteer",
        "testRegex": "./test/.*.js$"
    },
    "prettier": {
        "bracketSpacing": false,
        "singleQuote": true,
        "tabWidth": 4
    }
}
